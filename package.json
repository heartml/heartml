{
  "name": "heartml",
  "version": "0.8.1",
  "description": "Postmodern HTML. Web components with the hots for declarative markup.",
  "private": false,
  "author": "Jared White",
  "license": "MIT",
  "main": "dist/heartml.cdn.js",
  "exports": {
    ".": "./dist/heartml.js",
    "./DeclarativeHeartElement.js": "./dist/DeclarativeHeartElement.js",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "esbuild example/js/example.js example/js/todoapp.js --bundle --watch --servedir=example --outdir=example/js --serve=4000",
    "build": "rm -rf dist && npm run build:esm && npm run build:cdn",
    "build:esm": "esbuild src/heartml.js src/DeclarativeHeartElement.js --bundle --splitting --external:@preact/signals-core --chunk-names=heartml-shared-[hash] --outdir=dist --format=esm",
    "build:cdn": "esbuild src/heartml.cdn.js --bundle --outdir=dist --minify",
    "release": "npm build && npm publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "https://github.com/heartml/heartml",
  "dependencies": {
    "@preact/signals-core": "^1.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.18.17"
  }
}
