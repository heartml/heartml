{
  "name": "heartml",
  "version": "0.3.0",
  "description": "Postmodern HTML. Groovy components playing a hot new tune.",
  "private": false,
  "author": "Jared White",
  "license": "MIT",
  "main": "dist/heartml.cdn.js",
  "exports": {
    ".": "./dist/heartml.js",
    "./DeclarativeHeartML.js": "./dist/DeclarativeHeartML.js",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "esbuild example/js/example.js --bundle --watch --servedir=example --outdir=example/js --serve=4000",
    "build": "npm run build:esm && npm run build:cdn",
    "build:esm": "esbuild src/heartml.js src/DeclarativeHeartML.js --bundle --splitting --external:@preact/signals-core --outdir=dist --format=esm",
    "build:cdn": "esbuild src/heartml.cdn.js --bundle --outdir=dist --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "https://github.com/whitefusionhq/crystallized",
  "dependencies": {
    "@preact/signals-core": "^1.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.18.17"
  }
}
